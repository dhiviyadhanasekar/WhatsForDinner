<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:onClick="showMeals"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_meals" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Meals"
            android:id="@+id/textView6"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:textColor="#0b06a3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:onClick="showRecipies"
        android:layout_marginLeft="30dp"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/recipie_image"
            android:src="@drawable/ic_recipies"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Recipies"
            android:id="@+id/recipies_label"
            android:layout_below="@+id/recipie_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#0b06a3" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:clickable="true"
            android:onClick="showNutritionManager"
            android:layout_marginLeft="30dp"
            android:id="@+id/nutrition_man_layout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_nutrition_man"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nutrition Manager"
                android:id="@+id/textView7"
                android:layout_below="@+id/imageView2"
                android:paddingLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="#0b06a3" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="match_parent" android:paddingTop="15dp">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:onClick="showGroceries"
        android:layout_marginLeft="30dp"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_groceries"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Groceries"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#0b06a3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:onClick="showAddNewDish"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_plus"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Dish"
            android:id="@+id/textView9"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#0b06a3" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>