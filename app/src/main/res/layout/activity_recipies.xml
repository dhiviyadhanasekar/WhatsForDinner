<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.wearable.whatsfordinner.RecipiesActivity">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.wearable.whatsfordinner.RecipiesPortraitFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_recipies_portrait" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.wearable.whatsfordinner.RecipiesLandscapeFragment"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragment_recipies_landscape" />
</LinearLayout>
