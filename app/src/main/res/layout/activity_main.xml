<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top_margin"
    tools:context="com.wearable.whatsfordinner.MainActivity"
    android:id="@+id/mainViewLayout">

    <include layout="@layout/home_banner"
        android:id="@+id/include" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/include"
        android:layout_toRightOf="@+id/mealsIcon"
        android:layout_toEndOf="@+id/mealsIcon">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mealsIcon"
            android:clickable="true"
            tools:showIn="@layout/activity_main"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Meals"
            android:id="@+id/mealsLabel"
            android:layout_below="@+id/mealsIcon"
            android:layout_centerHorizontal="true"
            android:textColor="#0b06a3" />
    </RelativeLayout>

</RelativeLayout>
